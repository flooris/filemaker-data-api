{
    "name": "flooris/filemaker-data-api",
    "description": "Package to easily access the FileMaker Data API",
    "type": "library",
    "homepage": "https://github.com/flooris/filemaker-data-api",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Flooris",
            "email": "info@flooris.nl"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0",
        "guzzlehttp/guzzle": "^7.4.5|^7.5"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.1",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.6",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Flooris\\FileMakerDataApi\\": "src",
            "Flooris\\FileMakerDataApi\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flooris\\FileMakerDataApi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "FileMakerDataApi\\FileMakerDataApi\\FileMakerDataApiServiceProvider"
            ],
            "aliases": {
                "FileMakerDataApi": "FileMakerDataApi\\FileMakerDataApi\\Facades\\FileMakerDataApi"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
